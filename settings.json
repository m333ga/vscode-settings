{
  //   Editor settings
  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.linkedEditing": true,
  "editor.glyphMargin": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.renderWhitespace": "none",
  "workbench.editor.enablePreview": false,
  "window.density.editorTabHeight": "compact",
  "editor.showFoldingControls": "never",

  //   Explorer settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "workbench.tree.renderIndentGuides": "none",
  "editor.guides.indentation": false,
  "editor.stickyScroll.enabled": false,
  "editor.renderLineHighlight": "none",

  //   Appearance
  "workbench.colorTheme": "Shades of Purple",
  "window.zoomLevel": 1,
  //   text
  "editor.fontSize": 14,
  "editor.fontFamily": "'Roboto Mono Regular'",
  // terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Roboto Mono",
  "terminal.integrated.cursorStyleInactive": "outline",
  "terminal.integrated.tabs.showActions": "never",
  "terminal.integrated.tabs.enableAnimation": false,
  //   icons
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "Tabler",
  //   cursor
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  // workspace
  "workbench.sideBar.location": "right",
  "editor.minimap.enabled": false,
  "editor.folding": false,
  "workbench.editor.tabSizing": "fit",
  "workbench.startupEditor": "newUntitledFile",
  //   ruler
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.verticalScrollbarSize": 7,
  "editor.scrollbar.horizontalScrollbarSize": 5,
  //   titlebar
  "window.title": "${rootName}",
  "window.titleBarStyle": "custom",
  //   explorer
  "explorer.compactFolders": false,
  //   breadcrumbs
  "breadcrumbs.enabled": false,

  //   Optimize
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.smoothScrolling": false,
  "workbench.reduceMotion": "on",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,

  //   Git
  "git.enabled": false,
  "git.enableSmartCommit": false,
  "git.openRepositoryInParentFolders": "never",

  // html
  "html.autoClosingTags": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "liveServer.settings.donotShowInfoMsg": true,

  //   css
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  //   js
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  //   json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // python
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.tabSize": 4
  },
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "top"
}
